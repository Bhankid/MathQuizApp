<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="416.0" prefWidth="654.0" spacing="10" styleClass="body-container" stylesheets="@style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mathquiz.MathController">
    <Label fx:id="problemLabel" prefHeight="114.0" prefWidth="587.0" styleClass="body-container" stylesheets="@style.css" text="Click 'Generate Problem' to start" textOverrun="CLIP" wrapText="true">
      <font>
         <Font name="System Bold" size="25.0" />
      </font>
      <VBox.margin>
         <Insets />
      </VBox.margin></Label>
    <TextField fx:id="answerField" prefHeight="25.0" prefWidth="523.0" promptText="Enter your answer">
      <font>
         <Font size="14.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
      </VBox.margin></TextField>
    <Button onAction="#generateProblem" styleClass="btn" stylesheets="@style.css" text="Generate Problem">
      <font>
         <Font size="15.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></Button>
    <Button onAction="#checkAnswer" styleClass="btn" stylesheets="@style.css" text="Check Answer">
      <font>
         <Font size="15.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></Button>
    <Label fx:id="timerLabel" prefHeight="20.0" prefWidth="45.0" styleClass="body-container" stylesheets="@style.css" text="10 " textAlignment="CENTER">
      <font>
         <Font size="14.0" />
      </font></Label>
    <Label fx:id="scoreLabel" styleClass="body-container" stylesheets="@style.css" text="Score: 0">
      <font>
         <Font size="14.0" />
      </font>
      <VBox.margin>
         <Insets right="20.0" />
      </VBox.margin></Label>
</VBox>
